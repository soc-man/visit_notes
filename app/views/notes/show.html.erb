<%= render "nav"%>
<div class = "container">
  <h1 class = "text-center"> <%= @note.title %> </h1>
  <p> <%= @note.body %> </p>
   
  <div class = "row">
    <div class = "col-sm-4">
      <%= link_to 'Back', root_path, :class => 'btn btn-default' %>
    </div>
    <div class = "col-sm-4">
      <%= link_to 'Edit', edit_note_path(@note), :class => 'btn btn-default' %>
    </div>
    <div class = "col-sm-4">
      <%= link_to 'Delete', @note, method: :delete, form: { data: { confirm: 'Are you sure?' } }, :class => 'btn btn-danger' %>
    </div>
  </div>
</div>